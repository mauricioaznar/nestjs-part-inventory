// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
}

model Part {
  part_id          Int               @id @default(autoincrement())
  name             String            @db.Text
  comment          String?           @db.Text
  image_url        String?
  part_category_id Int
  part_categories  PartCategory      @relation("categories", fields: [part_category_id], references: [part_category_id])
  components       PartComponent[]   @relation("component")
  parents          PartComponent[]   @relation("parent")
  additions        PartAddition[]    @relation("additions")
  subtractions     PartSubtraction[] @relation("subtractions")
}

model PartCategory {
  part_category_id Int    @id @default(autoincrement())
  parts            Part[] @relation("categories")
  name             String @db.Text
}

model PartComponent {
  parent       Part @relation("parent", fields: [parent_id], references: [part_id])
  parent_id    Int
  component    Part @relation("component", fields: [component_id], references: [part_id])
  component_id Int
  quantity     Int

  @@id([parent_id, component_id])
}

model PartAddition {
  id       Int  @id @default(autoincrement())
  part_id  Int
  part     Part @relation("additions", fields: [part_id], references: [part_id])
  quantity Int
}

model PartSubtraction {
  id       Int  @id @default(autoincrement())
  part_id  Int
  part     Part @relation("subtractions", fields: [part_id], references: [part_id])
  quantity Int
}
