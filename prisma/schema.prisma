generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
}



model Part {
  part_id                       Int                             @id @default(autoincrement())
  name                             String                          @db.Text
  comment                          String?                         @db.Text
  components  PartComponent[] @relation("component")
  parents  PartComponent[] @relation("parent")
}


model PartComponent {
  parent    Part @relation("parent", fields: [parent_id], references: [part_id])
  parent_id  Int
  component   Part @relation("component", fields: [component_id], references: [part_id])
  component_id Int
  quantity Int

  @@id([parent_id, component_id])
}

