// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
}

model Part {
  part_id               Int               @id @default(autoincrement())
  name                  String            @db.Text
  comment               String?           @db.Text
  imageUrl             String?
  partCategoryId      Int
  defaultGeneratedQuantity    Int               @default(1)
  partCategory         PartCategory      @relation("partCategory", fields: [partCategoryId], references: [partCategoryId])
  parentAssignments    PartAssignment[]  @relation("parentAssignments")
  componentAssignments PartAssignment[]  @relation("componentAssignments")
  additions             PartAddition[]    @relation("additions")
  subtractions          PartSubtraction[] @relation("subtractions")
}

model PartCategory {
  partCategoryId Int    @id @default(autoincrement())
  parts            Part[] @relation("partCategory")
  name             String @db.Text
}

model PartAssignment {
  parent            Part @relation("parentAssignments", fields: [parentId], references: [part_id])
  parentId         Int
  component         Part @relation("componentAssignments", fields: [componentId], references: [part_id])
  componentId      Int
  requiredQuantity Int

  @@id([parentId, componentId])
}

model PartAddition {
  id       Int  @id @default(autoincrement())
  part_id  Int
  part     Part @relation("additions", fields: [part_id], references: [part_id])
  quantity Int
}

model PartSubtraction {
  id       Int  @id @default(autoincrement())
  part_id  Int
  part     Part @relation("subtractions", fields: [part_id], references: [part_id])
  quantity Int
}
